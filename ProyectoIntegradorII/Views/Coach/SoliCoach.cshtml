@model ProyectoIntegradorII.Models.ModelosCustom.SoliCoach

@{
    ViewData["Title"] = "SoliCoach";
    Layout = "~/Views/Shared/_LayoutCliente.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

<table class="table table-bordered table-dark table-striped text-center" style="width: 75%; margin-left: 170px; margin-top: 0px; font-size:11px; font-family: lemon;">
  <thead>
    <tr>
      <th scope="col">Coach</th>
      <th scope="col">Tipo de Sesión</th>
      <th scope="col">Tipo de Servicio</th>
      <th scope="col">Precio</th>
      <th scope="col">Total de Horas por Sessiones</th>
      <th scope="col">Monto</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>@ViewBag.coach</td>
      <td>@ViewBag.sesion</td>
      <td>@ViewBag.servicio</td>
      <td>S/. @Html.DisplayFor(model => model.precio)</td>
      <td>@ViewBag.totalseshor</td>
      <td>S/. @Html.DisplayFor(model => model.monto)</td>
    </tr>
  </tbody>
</table>

<div style="margin: 20px;">
    <h5 class="modaltituloinsert" id="exampleModalLabel">INGRESE SUS DATOS</h5>
</div>

<div style="width: 70%; margin-left: 230px;">
    <form asp-action="NuevoCliente">
      <div class="form-row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div hidden>
            <div class="form-group">
                <label asp-for="idCoach" class="control-label"></label>
                <input asp-for="idCoach" value="@ViewBag.id" class="form-control" />
                <span asp-validation-for="idCoach" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="tipoSesion" class="control-label"></label>
                <input asp-for="tipoSesion" value="@ViewBag.ses" class="form-control" />
                <span asp-validation-for="tipoSesion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="tipoServicio" class="control-label"></label>
                <input asp-for="tipoServicio" value="@ViewBag.ser" class="form-control" />
                <span asp-validation-for="tipoServicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="precio" class="control-label"></label>
                <input asp-for="precio" value="@ViewBag.precio" class="form-control" />
                <span asp-validation-for="precio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cantidadSesiones" class="control-label"></label>
                <input asp-for="cantidadSesiones" value="@ViewBag.cantsesiones" class="form-control" />
                <span asp-validation-for="cantidadSesiones" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cantidadHoras" class="control-label"></label>
                <input asp-for="cantidadHoras" value="@ViewBag.cantHoras" class="form-control" />
                <span asp-validation-for="cantidadHoras" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="monto" class="control-label"></label>
                <input asp-for="monto" value="@ViewBag.monto" class="form-control" />
                <span asp-validation-for="monto" class="text-danger"></span>
            </div>
            </div>
        <div class="form-group col-md-6" style="padding-right: 70px;">
          <label class="control-label is-required" style="font-family: lemon; color: white; font-size: 14px;">Nombres</label>
          <input asp-for="nombres" type="text" class="form-control form-control-sm" name="nombres" value="" placeholder="Ingrese sus nombres">
          <span asp-validation-for="nombres" class="text-danger" style="font-size: 11px; margin-bottom:-5px; margin-top:5px; font-family: lemon; color: red; text-shadow: 0 0 3px #000000;"></span>
          @*<p class="formulario__input-error" style="font-size: 11px; margin-bottom:-5px; margin-top:5px; font-family: lemon; color: red; text-shadow: 0 0 3px #000000;">El usuario tiene que ser de 4 a 16 dígitos y solo puede contener numeros, letras y guion bajo.</p>*@
        </div>
        <div class="form-group col-md-6" style="padding-right: 70px;">
          <label class="control-label is-required" style="font-family: lemon; color: white; font-size: 14px;">Apellidos</label>
          <input asp-for="apellidos" type="text" class="form-control form-control-sm" name="apellidos" value="" placeholder="Ingrese sus apellidos">
          <span asp-validation-for="apellidos" class="text-danger" style="font-size: 11px; margin-bottom:-5px; margin-top:5px; font-family: lemon; color: red; text-shadow: 0 0 3px #000000;"></span>
          @*<p class="formulario__input-error" style="font-size: 11px; margin-bottom:-5px; margin-top:5px; font-family: lemon; color: red; text-shadow: 0 0 3px #000000;">El usuario tiene que ser de 4 a 16 dígitos y solo puede contener numeros, letras y guion bajo.</p>*@
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-md-6" style="padding-right: 70px;">
          <label class="control-label" style="font-family: lemon; color: white; font-size: 14px;">Dirección</label>
          <input asp-for="direccion" type="text" class="form-control form-control-sm" name="direccion" value="" placeholder="Ingrese su dirección">
          <span asp-validation-for="direccion" class="text-danger" style="font-size: 11px; margin-bottom:-5px; margin-top:5px; font-family: lemon; color: red; text-shadow: 0 0 3px #000000;"></span>
          @*<p class="formulario__input-error" style="font-size: 11px; margin-bottom:-5px; margin-top:5px; font-family: lemon; color: red; text-shadow: 0 0 3px #000000;">El usuario tiene que ser de 4 a 16 dígitos y solo puede contener numeros, letras y guion bajo.</p>*@
        </div>
        <div class="form-group col-md-4" style="padding-right: 10px;">
           <label class="control-label" style="font-family: lemon; color: white; font-size: 14px;">Teléfono</label>
           <input asp-for="telefono" type="number" class="form-control form-control-sm" name="telefono" value="" placeholder="Ingrese su teléfono" style="width: 180px;">
           <span asp-validation-for="telefono" class="text-danger" style="font-size: 11px; margin-bottom:-5px; margin-top:5px; font-family: lemon; color: red; text-shadow: 0 0 3px #000000;"></span>
           @*<p class="formulario__input-error" style="font-size: 11px; margin-bottom:-5px; margin-top:5px; font-family: lemon; color: red; text-shadow: 0 0 3px #000000; margin-inline-end: -200px;">El usuario tiene que ser de 4 a 16 dígitos y solo puede contener numeros, letras y guion bajo.</p>*@
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-md-6" style="padding-right: 70px;">
          <label class="control-label" style="font-family: lemon; color: white; font-size: 14px;">Correo</label>
          <input asp-for="correo" type="email" class="form-control form-control-sm" name="correo" value="" placeholder="Ingrese su correo">
          <span asp-validation-for="correo" class="text-danger" style="font-size: 11px; margin-bottom:-5px; margin-top:5px; font-family: lemon; color: red; text-shadow: 0 0 3px #000000;"></span>
          @*<p class="formulario__input-error" style="font-size: 11px; margin-bottom:-5px; margin-top:5px; font-family: lemon; color: red; text-shadow: 0 0 3px #000000;">El usuario tiene que ser de 4 a 16 dígitos y solo puede contener numeros, letras y guion bajo.</p>*@
        </div>
        <div class="form-group col-md-6" style="padding-right: 70px;">
          <label class="control-label" style="font-family: lemon; color: white; font-size: 14px;">Tipo Documento</label>
          <select asp-for="tipoDocumento" asp-items="@ViewBag.tipodocumentos" class="form-select p-1 px-2 select-add-placeholder dropdown-toggle dropdown-toggle-split" style="font-size: 14px; width: 200px;"></select>
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-md-6" style="padding-right: 70px;">
          <label class="control-label" style="font-family: lemon; color: white; font-size: 14px;">Número Documento</label>
          <input asp-for="numDocumento" type="text" class="form-control form-control-sm" name="numdocumento" value="" placeholder="Ingrese su número de documento" style="width: 250px;">
          <span asp-validation-for="numDocumento" class="text-danger" style="font-size: 11px; margin-bottom:-5px; margin-top:5px; font-family: lemon; color: red; text-shadow: 0 0 3px #000000;"></span>
          @*<p class="formulario__input-error" style="font-size: 11px; margin-bottom:-30px; margin-top:5px; font-family: lemon; color: red; text-shadow: 0 0 3px #000000;">El usuario tiene que ser de 4 a 16 dígitos y solo puede contener numeros, letras y guion bajo.</p>*@
        </div>
        <div class="form-group col-md-6" style="padding-right: 70px;">
          <label class="control-label" style="font-family: lemon; color: white; font-size: 14px;">País</label>
          <select asp-for="pais" asp-items="@ViewBag.paises" class="form-select p-1 px-2 select-add-placeholder dropdown-toggle dropdown-toggle-split" style="font-size: 14px; width: 200px;"></select>
        </div>
      </div>
      <br />
      <div class="form-footer">
          <div style="padding-left: 280px;">
            <input type="submit" value="Registrar" class="modalingresardatos" style="margin-right: 40px;"/>
            <input type="button" value="Regresar" class="modalingresardatosregresar" onclick="location.href='@Url.Action("EncontrarCoach", "Coach")'" />
          </div>
      </div>
    </form>
</div>

<div>
    @ViewBag.mensaje
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>