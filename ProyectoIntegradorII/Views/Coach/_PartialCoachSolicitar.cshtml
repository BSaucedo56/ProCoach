<script>

    //REGLA DE NEGOCIO INDIVIDUAL
    $("#servicio").change(function () {
        if (document.getElementById('servicio').value == "1") {
            $("#cantsesiones").val(1);
            document.getElementById("cantsesiones").disabled = true;
            $("#canthoras").val(1);
            document.getElementById("canthoras").disabled = true;
        }
        if (document.getElementById('servicio').value == "2") {
            document.getElementById("cantsesiones").disabled = false;
            document.getElementById("canthoras").disabled = false;
        }
    });           
   
</script>
<script>
    $("#sesion").change(function () {
        if (document.getElementById('sesion').value == "1") {
            $("#servicio").val(1);
            document.getElementById("servicio").disabled = true;
            $("#cantsesiones").val(1);
            document.getElementById("cantsesiones").disabled = true;
            $("#canthoras").val(1);
            document.getElementById("canthoras").disabled = true;
        }
        if (document.getElementById('sesion').value == "2" && document.getElementById('servicio').value == "1") {
            document.getElementById("servicio").disabled = false;
            $("#cantsesiones").val(1);
            document.getElementById("cantsesiones").disabled = true;
            $("#canthoras").val(1);
            document.getElementById("canthoras").disabled = true;
        }
        if (document.getElementById('sesion').value == "2" && document.getElementById('servicio').value == "2") {
            document.getElementById("cantsesiones").disabled = false;
            document.getElementById("canthoras").disabled = false;
        }
    });      
</script>
<script>

    $(document).change(function(event){
      //Capturo el valor de cantSesiones,cantHoras y precio
      cantSesiones = $('#cantsesiones').val();
      cantHoras = $('#canthoras').val();
      precio = document.getElementById("precio").value;
      //Compruebo si alguno de los tres está vacío
      if(cantSesiones == "" || cantHoras == "" || precio == ""){
        //A la variable resultado le asigno el valor 0
        var resultado = 0;
      }else{
        //Si los tres ya tienen valor, hago operacion de los tres valores
        var resultado = parseInt(precio) * parseInt(cantSesiones) * parseInt(cantHoras);
      }
      //Muestro el resultado
        document.getElementById("monto").value = resultado;
    });  

</script>
