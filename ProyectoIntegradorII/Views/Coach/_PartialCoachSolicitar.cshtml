            @Html.DropDownList("canthoras", listado4, new { @class = "p-1 ml-1 text-center rounded-pill select-add-placeholder dropdown-toggle dropdown-toggle-split" })
            </div>
        <br />
        <br />
        <h2 class="h2modalcoachmonto">Monto:</h2>
            <div class="modalcoachmontodes">
            @Html.TextBox("monto", null , new { disabled = "disabled", type="number", @class ="p-1 ml-1 rounded" })
            </div>
        <br />
        <br />

        <div class="modal-footer">
        <button type="button" class="modalsoliaceptar" data-bs-toggle="modal" data-bs-target="#modalInsertarCliente">Siguiente</button>
        <button type="button" class="modalsolicancelar" data-bs-dismiss="modal" onClick = "cerrarModal()">Cancelar</button>
      </div>
